{
  "crons": [
    {
      "path": "/api/cron/weekly-recrawl",
      "schedule": "0 2 * * 1"
    },
    {
      "path": "/api/cron/cleanup-vectors",
      "schedule": "0 3 * * 0"
    },
    {
      "path": "/api/cron/archive-logs",
      "schedule": "0 1 * * *"
    },
    {
      "path": "/api/cron/validate-manifests",
      "schedule": "0 4 1 * *"
    }
  ],
  "headers": [
    {
      "source": "/api/cron/:path*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, must-revalidate"
        }
      ]
    }
  ]
}
