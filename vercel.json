{
  "version": 2,
  "crons": [
  {
    "path": "/api/cron/weekly-recrawl",
    "schedule": "0 0 2 * * 1"
  },
  {
    "path": "/api/cron/cleanup-vectors",
    "schedule": "0 0 3 * * 0"
  },
  {
    "path": "/api/cron/archive-logs",
    "schedule": "0 0 1 * * *"
  },
  {
    "path": "/api/cron/validate-manifests",
    "schedule": "0 0 4 1 * *"
  }
],
"functions": {
"app/api/cron/weekly-recrawl/route.ts": {
"maxDuration": 300
},
"app/api/cron/cleanup-vectors/route.ts": {
"maxDuration": 180
},
"app/api/cron/archive-logs/route.ts": {
"maxDuration": 120
},
"app/api/cron/validate-manifests/route.ts": {
"maxDuration": 180
},
"app/api/chat/route.ts": {
"maxDuration": 30
},
"app/api/prompt/generate/route.ts": {
"maxDuration": 30
}
},
"headers": [
{
"source": "/api/cron/:path",
"headers": [
{
"key": "Cache-Control",
"value": "no-store, must-revalidate"
}
]
},
{
"source": "/api/(.)",
"headers": [
{
"key": "X-Content-Type-Options",
"value": "nosniff"
},
{
"key": "X-Frame-Options",
"value": "DENY"
},
{
"key": "X-XSS-Protection",
"value": "1; mode=block"
}
]
}
],
"rewrites": [
{
"source": "/health",
"destination": "/api/health"
}
]
}
